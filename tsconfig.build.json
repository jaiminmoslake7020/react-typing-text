
{
    "compilerOptions": {
        "target": "ES2021",
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "node",
        "declaration": true,
        "emitDeclarationOnly": true,
        "sourceMap": false,
        "outDir": "dist",
        "declarationDir": "types",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "@lib/*": [
                "./lib/*"
            ]
        }
    },
    "include": [
        "lib"
    ],
}